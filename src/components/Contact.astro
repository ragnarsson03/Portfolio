<section id="contacto" class="py-24 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div
      class="opacity-0 transform translate-y-4 transition-all duration-1000"
      data-animation="fade-in-up"
    >
      <h2 class="text-3xl font-bold text-center mb-16 relative dark:text-white">
        Contacto
        <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-blue-500 mt-2"></span>
      </h2>
    </div>
    
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <!-- Información de contacto -->
        <div 
          class="space-y-8 mx-auto w-full opacity-0 transform -translate-x-8 transition-all duration-1000"
          data-animation="fade-in-left"
        >
          <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-envelope text-white text-xl"></i>
              </div>
              <div>
                <h3 class="text-lg font-semibold dark:text-white">Email</h3>
                <a href="mailto:frederickduran1000@gmail.com" class="text-gray-600 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 transition-colors">
                  Samirduran1000@gmail.com
                </a>
              </div>
            </div>
          </div>
          
          <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mr-4">
                <i class="fab fa-whatsapp text-white text-xl"></i>
              </div>
              <div>
                <h3 class="text-lg font-semibold dark:text-white">WhatsApp</h3>
                <button id="whatsapp-button" class="text-gray-600 dark:text-gray-300 hover:text-green-500 dark:hover:text-green-400 transition-colors">
                  +58 414 908 3826
                </button>
              </div>
            </div>
          </div>
          
          <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mr-4">
                <i class="fab fa-linkedin-in text-white text-xl"></i>
              </div>
              <div>
                <h3 class="text-lg font-semibold dark:text-white">LinkedIn</h3>
                <a href="#" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-500 transition-colors">
                  Frederick Durán
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Formulario de contacto -->
        <div 
          class="opacity-0 transform translate-x-8 transition-all duration-1000"
          data-animation="fade-in-right"
        >
          <div class="bg-white dark:bg-gray-700 p-8 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-6 dark:text-white">Envíame un mensaje</h3>
            <form id="contact-form" class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nombre</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white"
                  required
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white"
                  required
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Mensaje</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="4" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white"
                  required
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              >
                Enviar Mensaje
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Función para abrir WhatsApp
  function openWhatsApp() {
    // Número de WhatsApp con código de país
    const phoneNumber = "584149083826";
    const message = "Hola Frederick, me gustaría hablar contigo sobre un proyecto.";
    const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
    window.open(whatsappUrl, '_blank');
  }
  
  // Agregar event listener al botón de WhatsApp
  document.getElementById('whatsapp-button')?.addEventListener('click', openWhatsApp);
  
  // Manejar el envío del formulario
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    // Aquí puedes agregar la lógica para enviar el formulario
    // Por ahora, solo mostraremos un alert
    alert('Gracias por tu mensaje. Te contactaré pronto!');
    this.reset();
  });

  // Animación al hacer scroll
  function handleIntersection(entries, observer) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.remove('opacity-0');
        entry.target.classList.remove('-translate-x-8');
        entry.target.classList.remove('translate-x-8');
        entry.target.classList.remove('translate-y-4');
        observer.unobserve(entry.target);
      }
    });
  }

  // Configurar el observer
  const options = {
    threshold: 0.1
  };

  const observer = new IntersectionObserver(handleIntersection, options);

  // Observar todos los elementos con animación
  document.querySelectorAll('[data-animation]').forEach(el => {
    observer.observe(el);
  });
</script>